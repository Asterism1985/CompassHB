{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "jsx": "react",
    "outDir": "build",
    "rootDir": "src",
    "noImplicitAny": true,
    "sourceMap": false
  },
  "filesGlob": [
    "typings/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "build",
    "__tests__"
  ]
}